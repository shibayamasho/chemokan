<h1>レジメン一覧</h1>
<div class="plan-new">
  <%= link_to 'レジメン新規登録', new_plan_path %>
</div>

<%= render 'search' %>

<h3>登録レジメン一覧</h3>
<div class="plans">
  <% @plans.each do |plan| %>
    <div class="plan">
      <ul class="plan-item-lists">
        <li class="plan-name"><%= link_to plan.name, plan_path(plan.id) %></li>
      </ul>
    </div>
  <% end %>
</div>