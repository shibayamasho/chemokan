        <td class="plan-dose"><%= f.text_field :dose1, id:"plan-dose1", placeholder:"用量" %></td>
        <td><%= f.collection_select(:unit1_id, Unit1.all, :id, :name, {}, {class:"select-box", id:"plan-unit1"}) %></td>
        <td><%= f.text_field :schedule1, id:"plan-schedule1", placeholder:"投与日" %></td>
