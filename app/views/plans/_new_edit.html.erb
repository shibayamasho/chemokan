<%= form_with model: @plan, local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="form-wrap">

    <div class="plan-name">
      <p>レジメン名（必須 重複不可）
      <%= f.text_field :name, id:"plan-name", placeholder:"レジメン名を入力" %></p>
    </div>
    <div class="plan-period">
      <p>１コースの日数（必須 半角数字）
      <%= f.text_field :period, id:"plan-period", placeholder:"日数" %></p>
    </div>

    <table>
