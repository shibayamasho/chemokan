<h1>疾患一覧</h1>

<%= form_with model: @disease, local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="form-wrap">
    <div>
      <a>がん種：
      <%= f.collection_select(:cancer_id, Cancer.all, :id, :name, {}, {class:"select-box", id:"disease-cancer"}) %>　　</a>
      <a>サブタイプ等：
      <%= f.collection_select(:other_id, Other.all, :id, :name, {}, {class:"select-box", id:"disease-other"}) %>　　</a>
      <a>治療目的：
      <%= f.collection_select(:purpose_id, Purpose.all, :id, :name, {}, {class:"select-box", id:"disease-purpose"}) %></a>
    </div>
  </div>
<% end %>


<p>疾患一覧</p>
<div class="diseases">
  <% @diseases.each do |disease| %>
    <a><%= link_to "編集", edit_disease_path(disease.id) %>　</a>
    <a class="cancer-name">がん種：<%= disease.cancer.name %>　　</a>
    <a class="disease-other">サブタイプ等：<%= disease.other.name %>　　</a>
    <a class="disease-purpose">治療目的：<%= disease.purpose.name %>　　</a>
  <% end %>
</div>