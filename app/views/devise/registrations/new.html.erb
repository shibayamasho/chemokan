<div class="sign-up">
  <%= image_tag "logo.png", alt: "けもかんロゴ", class: "signin-logo-image" %>
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
      <%= f.label :"ユーザーＩＤ(必須 半角英数字８文字以上)" %><br />
      <%= f.text_field :uid, autofocus: true, autocomplete: "uid", placeholder: "ユーザーIDを入力" %>
    </div>

      <div class="field">
      <%= f.label :"名前(必須)" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名を入力" %>
    </div>

    <div class="field">
      <%= f.label :"メールアドレス(必須)" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード" %>
      <% if @minimum_password_length %>
      <em>(必須 半角英数字<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>