<div class="sign-in">
  <%= image_tag "logo.png", alt: "けもかんロゴ", class: "signin-logo-image" %>
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :"ユーザーＩＤ(半角英数字)" %><br />
      <%= f.text_field :uid, autofocus: true, autocomplete: "uid", placeholder: "ユーザーIDを入力" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード(半角英数字)" %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :記憶する %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>